---
import Header from '../layouts/Header.astro';
import LeftSidebar from '../layouts/LeftSidebar.astro';

let {title}=Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="apple-touch-icon" sizes="180x180" href="https://searce.com/assets/images/favicon/apple-touch-icon.png"/>
    <link rel="icon" type="image/png" sizes="32x32" href="https://searce.com/assets/images/favicon/favicon-32x32.png"/>
    <link rel="icon" type="image/png" sizes="16x16" href="https://searce.com/assets/images/favicon/favicon-16x16.png"/>

    <title>{title}</title>
  </head>
  <body>
    <div class="flex flex-row h-full">
      <div class="text-gray-900 bg-gray-50 h-screen w-screen overflow-y-auto">
        <Header></Header>

        <!-- Content -->
        <div class="w-full px-4 mx-auto max-w-8xl">
          <div class="lg:flex">
            <LeftSidebar></LeftSidebar>

            <div class="fixed inset-0 z-10 hidden bg-gray-900/50" id="sidebarBackdrop"></div>

            
          </div>
        </div>

        <!-- End of Content -->
      </div>
    </div>
  </body>
</html>